<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wddyxd.userservice.mapper.UserAddressMapper">

    <select id="checkAllIdsExistAndNotDeleted" resultType="java.lang.Boolean">
        SELECT
        CASE
        WHEN COUNT(*) = #{ids.size} THEN TRUE
        ELSE FALSE
        END
        FROM user_address
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
        AND is_deleted = 0
    </select>

</mapper>