<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wddyxd.userservice.mapper.UserRoleMapper"> <!-- 替换为你的实际包路径 -->

    <select id="selectRoleGroupByRoleId" resultType="java.lang.Integer">
        SELECT `group`
        FROM `role`
        WHERE `id` = #{roleId}
          AND `is_deleted` = 0
    </select>

    <update id="deleteSameGroupUserRole">
        UPDATE `user_role` ur
            INNER JOIN `role` r ON ur.`role_id` = r.`id`
            SET ur.`is_deleted` = 1
        WHERE ur.`user_id` = #{userId}
          AND ur.`is_deleted` = 0
          AND r.`group` = #{targetGroup}
    </update>

</mapper>